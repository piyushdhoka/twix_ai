generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String?
  profileImage String?
  corePrompt   String?
  interactions Interaction[]
}

model Interaction {
  id         String   @id @default(uuid())
  userPrompt String
  aiResponse String
  mood       String?
  action     String?
  createdAt  DateTime @default(now())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}

model UserIp {
  id        String @id @default(uuid())
  ipAddress String
}
